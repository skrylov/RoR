<h1>Пользователи</h1>

<table class="table">
  <thead>
  <tr>
    <th>Имя</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Удалить', [:admin, user], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>