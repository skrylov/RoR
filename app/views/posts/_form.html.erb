<%= form_for(@post) do |f| %>
  <%= render "common/error" %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
      <%= f.label :category_ids, 'Категории' %><br>
      <%= f.collection_select :category_ids, Category.all, :id, :name, {}, {multiple: true} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
